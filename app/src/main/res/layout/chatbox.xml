<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_quit_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="522dp"
        android:onClick="onClickQuitterLeChat"
        android:text="QUITTER LE CHAT"
        app:layout_constraintBottom_toTopOf="@+id/id_messageToSend"
        app:layout_constraintStart_toStartOf="@+id/idRecyclerView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_envoyer_messsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="97dp"
        android:onClick="onClickMessageToSend"
        android:text="Envoi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_messageToSend"
        app:layout_constraintTop_toBottomOf="@+id/idRecyclerView" />

    <EditText
        android:id="@+id/id_messageToSend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="99dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ecrivez-votre message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_envoyer_messsage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_quit_chat" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecyclerView"
        android:layout_width="394dp"
        android:layout_height="522dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/id_envoyer_messsage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>